
set header_cache	= ~/.cache/mutt/header
set message_cachedir	= ~/.cache/mutt/body
set message_cachedir	= ~/.cache/mutt/cert

set sort	= threads
set sort_aux	= reverse-date-sent

set send_charset="utf-8"
set assumed_charset="utf-8"

set folder	= imaps://esjeon@lavabit.com:993/
mailboxes	= +Inbox +Sent +Drafts
set spoolfile	= +Inbox
folder-hook	imaps://esjeon@lavabit.com:993/ "\
	  set folder	= imaps://esjeon@lavabit.com:993/ \
	; set spoolfile	= +Inbox \
	; set postponed	= +Drafts \
	; set smtp_url	= smtps://esjeon@lavabit.com:465/ \
	; set from	= 'Eon S. Jeon <esjeon@lavabit.com> ' \
	; set record	= +Sent \
	; set realname	= 'Eon S. Jeon' \
	; set hostname	= lavabit.com \
	"


color normal default default
color tree yellow default
color indicator brightwhite blue

color hdrdefault brightblack default
color header brightyellow default "^(From)"
color header brightyellow default "^(Subject)"

color attachment brightyellow default
color quoted0 green default
color quoted1 magenta default
color quoted2 blue default
color quoted3 cyan default

color body brightblue black '(http|https|ftp):/(/[a-zA-Z0-9.@&#]+)+(/?)'

color index brightwhite green "~U"
color index brightblack default "~D"
color index green default "~P"
